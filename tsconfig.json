{
  "compilerOptions": {
    "sourceMap": true,
    "pretty": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "allowJs": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "config": ["config/index"],
      "ducks": ["src/ducks/index"],
      "ducks/*": ["src/ducks/*"],
      "modules": ["src/components/modules/index"],
      "modules/*": ["src/components/modules/*"],
      "common": ["src/components/common/index"],
      "common/*": ["src/components/common/*"],
      "hooks": ["src/hooks/index"],
      "hooks/*": ["src/hooks/*"],
      "images/*": ["src/static/images/*"],
      "router": ["server/router"],
      "server/*": ["server/*"],
      "styles": ["src/styles/index"],
      "styles/*": ["src/styles/*"],
      "services": ["src/services"],
      "services/*": ["src/services/*"],
      "store": ["src/store"],
      "types": ["src/types/index"],
      "vectors/*": ["src/static/vectors/*"]
    },
    "lib": [
      "dom",
      "esnext"
    ],
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js",
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
