{
  "compilerOptions": {
    "sourceMap": true,
    "pretty": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "config": ["config/index"],
      "ducks": ["src/ducks/index"],
      "ducks/*": ["src/ducks/*"],
      "modules/*": ["src/components/modules/*"],
      "common/*": ["src/components/common/*"],
      "images/*": ["src/static/images/*"],
      "router": ["src/server/router"],
      "server/*": ["server/*"],
      "styles": ["src/styles/index"],
      "styles/*": ["src/styles/*"],
      "services/*": ["src/services/*"],
      "store": ["src/store"],
      "styled-components": ["src/services/styled-components"],
      "types": ["src/types/index"],
      "vectors/*": ["src/static/vectors/*"]
    },
    "lib": ["dom", "es2017"],
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": ["dist", ".next", "out", "next.config.js", "node_modules"]
}
