{
  "parser": "@typescript-eslint/parser",
  "extends": [
      "react-app",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
  ],
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
    }
  },
  "settings": {
    "react": {
        "version": "detect"
    }
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__ACC__": false,
    "__PROD__": false,
    "YT": false
  },
  "rules": {
    "array-bracket-spacing": ["error", "never"],
    "arrow-parens": 2,
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "block-spacing": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "jsx-quotes": ["error", "prefer-double"],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true,
      "overrides": {
        "return": { "after": true },
        "throw": { "after": true },
        "case": { "after": true }
      }
    }],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }],
    "no-console": [2, { "allow": ["info", "error"]}],
    "no-trailing-spaces": ["error"],
    "object-curly-spacing": ["error", "always"],
    "prefer-const": ["error"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "comma-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "space-in-parens": ["error", "never"],
    "space-infix-ops": "error",
    "eol-last": ["error", "always"],
    "react/self-closing-comp": ["error", {
      "component": true,
      "html": true
    }],
    "react/jsx-tag-spacing": {
      "closingSlash": "never",
      "beforeSelfClosing": "always",
      "afterOpening": "never",
      "beforeClosing": "never"
    },
    "import/no-unresolved": false,
    "import/named": false,
    "import/order": ["error", {
      "groups": [
        "builtin",
        "external",
        "internal",
        "index",
        "parent",
        "sibling"
      ]
    }],
    "@typescript-eslint/indent": ["error", 2],
    "@typescript-eslint/explicit-function-return-type": false,
    "@typescript-eslint/no-empty-interface": false,
    "@typescript-eslint/prefer-interface": false,
    "@typescript-eslint/explicit-member-accessibility": [true, "no-public"],
    "@typescript-eslint/no-use-before-define": false,
    "@typescript-eslint/no-object-literal-type-assertion": false,
    "@typescript-eslint/no-parameter-properties": false,
    "@typescript-eslint/no-non-null-assertion": false,

    "@typescript-eslint/camelcase": false,
    "@typescript-eslint/ban-ts-ignore": false,
    "react/jsx-pascal-case": false
  }
}
